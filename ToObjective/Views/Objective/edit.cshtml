@model Objective
@{
}

<div class="container">
        <div id="table-header">
        <h2>Edit Task</h2>
        </div>

        <div>
            <form asp-action="Index">
                <div>
                    <label for="edit-title">Title</label>
                <input id="edit-title" value=@Model.Title/>
                </div>
                <div>
                    <label for="edit-description">Description</label>
                <input id="edit-description" value=@Model.Description/>
                </div>
                <div>
                    <label for="edit-do-date">Date</label>
                <input id="edit-do-date" type="date" value=@Model.CompleteByDate />
                </div>
                <div>
                    <button onclick="location.href='@Url.Action("Index","Objective")'">Submit</button>
                <!-- <button>Submit</button> -->
                </div>
            </form>
        </div>
</div>