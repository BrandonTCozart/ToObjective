@model ToObjective.Models.Objective

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        @if (Model.Description != null)
        {
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        }

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompleteByDate):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompleteByDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
        @if (Model.CompletedDate != null)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CompletedDate):
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CompletedDate)
        </dd>
        }
    </dl>
</div>
<div>
    <input type="button" value="Home" onclick="location.href='@Url.Action("Index","Objective")';" />

</div>
